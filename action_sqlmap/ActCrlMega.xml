<queries>

    <query id="SELECT_sqlite_master_mega_movie">
        <![CDATA[
                 SELECT name FROM sqlite_master WHERE type='table' AND name='mega_movie' 
        ]]>
    </query>

    <query id="CREATE_TABLE_mega_movie">
        <![CDATA[
                 CREATE TABLE IF NOT EXISTS mega_movie ( moviecode    TEXT NULL   /* 영화코드   */
                                                       , releasedate  TEXT NULL   /* 개봉일     */
                                                       , moviegbn     TEXT NULL   /* 구분       */
                                                       , moviename    TEXT NULL   /* 영화명     */
                                                       , PRIMARY KEY (moviecode)
                                                       )                                       
        ]]>
    </query>

    <query id="SELECT_sqlite_master_mega_region">
        <![CDATA[
                 SELECT name FROM sqlite_master WHERE type='table' AND name='mega_region' 
        ]]>
    </query>

    <query id="CREATE_TABLE_mega_region">
        <![CDATA[
                 CREATE TABLE IF NOT EXISTS mega_region ( regioncode    TEXT NULL   /* 지역코드   */
                                                        , regionname    TEXT NULL   /* 지역명     */
                                                        , PRIMARY KEY (regioncode)
                                                        ) 

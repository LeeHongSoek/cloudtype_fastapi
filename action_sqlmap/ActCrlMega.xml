    <query id="SELECT_sqlite_master_mega_cinema">
        <![CDATA[
                 SELECT name FROM sqlite_master WHERE type='table' AND name='mega_cinema' 
        ]]>
    </query>

    <query id="CREATE_TABLE_mega_cinema">
        <![CDATA[
                 CREATE TABLE IF NOT EXISTS mega_cinema ( cinemacode    TEXT NULL   /* 극장코드   */
                                                        , regioncode    TEXT NULL   /* 지역코드   */
                                                        , cinemaname    TEXT NULL   /* 극장명     */
                                                        , PRIMARY KEY (cinemacode)
                                                        )                                       
        ]]>
    </query>

